<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundoHistorinhas"
    tools:context=".view.HistorinhasActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTexto">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="57dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            android:src="@drawable/ic_voltar"
            android:tint="@color/colorFundoHistorinhas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnVoltar"
            android:layout_gravity="center"
            android:gravity="center_horizontal|clip_horizontal"
            android:text="Historinhas"
            android:textColor="@color/colorFundoHistorinhas"
            android:textSize="25dp" />

    </FrameLayout>

    <!-- Verificar a parada de compatibilidade com a api 10 -->
    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="4"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibPoluicao"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Poluição Ambiental"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibAgua"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Água"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibDesmatamento"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Desmatamento"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibCacaIlegal"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Caça Ilegal"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>


    </GridLayout>


</RelativeLayout>
