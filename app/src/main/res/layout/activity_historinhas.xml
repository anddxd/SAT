    <!-- Verificar a parada de compatibilidade com a api 10 -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="2"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibPoluicao"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Poluição Ambiental"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibAgua"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Água"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibDesmatamento"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Desmatamento"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibCacaIlegal"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#00000000"
                android:src="@drawable/livro_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Caça Ilegal"
                android:textAlignment="center"
                android:textColor="@color/colorTexto" />
        </LinearLayout>


    </GridLayout>


</RelativeLayout>
